<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Genre details</title>
    <%- include('./styles') %> 
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Home</a>
    </div>
  </nav>
    <div class="container-fluid bg-dark bg-gradient text-white">
        <h3 class="py-5 text-center"><%= genre.name %> Games</h3>
    </div>

    <div class="container">
        <div class="row justify-content-center">
          <% genre_games.forEach(function(game){ %>
            <div class="col-12 col-md-3 mt-3 d-flex justify-content-center">
              <a href=<%= game.url %>>
                <div class="card" style="width: 18rem;">
                  <img src="<%= game.image %>" class="card-img-top" alt="...">
                  <div class="card-body">
                    <p class="card-text"><%= game.title %></p>
                  </div>
                </div>
              </a>
            </div>
            
          <% }); %>
        </div>
      </div>
</body>
</html>